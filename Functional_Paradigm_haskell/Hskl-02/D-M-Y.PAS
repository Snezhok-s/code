   (* Демонстрация программы, определяющей день недели по *)
   (*  ч и с л у,  м е с я ц у  и  г о д у.               *)
   (*  Дата вводится в виде: число_месяц_год              *)
   (*  Пример ввода: 12 7 1950 (12 июля 1950 г.).         *)
   (*                                                     *)
   (* Тестирование выполнено для 1780 <= год <= 2099.     *)
   (* Автор алгоритма: М.Ленуар                           *)
   (* Реализация     : М.В.Швецкий (11.05.2020)           *)
   (* --------------------------------------------------- *)
   PROGRAM P_r_i_m_e_r;
      Uses CRT;
      var day, month, year,           (* Число, месяц, год  *)
          n, A1, A2, c     : LongInt; (* Рабочие переменные *)
          p                : Boolean; (* Флаг               *)
   BEGIN
      Read(day,month,year);
      A1:=year DIV 100; A2:=year MOD 100;
      (* --------------------------------- *)
      (* Определим "високосность" года...  *)
      (* --------------------------------- *)
      p:=(A2=0) AND (A1 MOD 4=0)
                 OR (A2<>0) AND (A2 MOD 4=0);
      n:=0;
      If month<=2
        then If p (* Если год високосный, то *)
               then n:=1
               else n:=2
        else ;
      c:=Trunc(365.25*A2) + Trunc(30.56*month) + day + n;
      WriteLn('***: ',c);
      c:=c MOD 7;
      (* -------------------------- *)
      If (year>=1780) AND (year<=1799)
        then If c<3
               then c:=c+4
               else c:=c-3
        else ;
      (* -------------------------- *)
      If (year>=1800) AND (year<=1899)
        then If c<=4
               then c:=c+2
               else c:=(c+2) MOD 7
        else ;
      (* -------------------------- *)
      If (year>=2000) AND (year<=2099)
        then If c>=1
               then c:=c-1
               else c:=6
        else ;
      (* ------------------------------------------- *)
      Write('День ',day:2,'.',month:2,'.',year:4,': ');
      Case c of
        5: Write ('понедельник');
        6: Write ('вторник');
        0: Write ('среда');
        1: Write ('четверг');
        2: Write ('пятница');
        3: Write ('суббота');
        4: Write ('воскресенье')
      end;
      ReadLn; ReadLn;
      ReadKey
   END.
